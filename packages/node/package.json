{
  "name": "lopr",
  "version": "0.1.7",
  "description": "Local proxy server with a GUI",
  "keywords": [
    "reverse proxy",
    "proxy",
    "server",
    "web",
    "node",
    "ssl",
    "http",
    "https",
    "monitoring",
    "middleware",
    "local"
  ],
  "license": "MIT",
  "type": "module",
  "bin": "dist/index.js",
  "module": "./dist/index.js",
  "author": {
    "name": "Joris Aerts",
    "url": "https://github.com/JorisAerts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JorisAerts/lopr.git"
  },
  "files": [
    "dist/**/*",
    "cert/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "copy:client": "cp -R ../client/dist ./dist/client",
    "build": "yarn check:type && yarn vite build && yarn copy:client",
    "check:type": "tsc --noEmit",
    "test": "vitest --typecheck",
    "serve": "node dist/index.js"
  },
  "dependencies": {
    "@mongodb-js/zstd": "2.0.1",
    "node-forge": "1.3.1",
    "picocolors": "1.1.1",
    "uuid": "11.1.0",
    "ws": "8.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.29",
    "@types/node-forge": "^1.3.11",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "lopr-shared": "workspace:*",
    "prettier": "^3.5.3",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^6.2.7",
    "vitest": "^3.1.3"
  }
}
