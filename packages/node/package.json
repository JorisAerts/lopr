{
  "name": "lopr",
  "version": "0.1.7",
  "description": "Local proxy server with a GUI",
  "keywords": [
    "reverse proxy",
    "proxy",
    "server",
    "web",
    "node",
    "ssl",
    "http",
    "https",
    "monitoring",
    "middleware",
    "local"
  ],
  "license": "MIT",
  "type": "module",
  "bin": "dist/index.js",
  "module": "./dist/index.js",
  "author": {
    "name": "Joris Aerts",
    "url": "https://github.com/JorisAerts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JorisAerts/lopr.git"
  },
  "files": [
    "dist/**/*",
    "cert/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "copy:client": "cp -R ../client/dist ./dist/client",
    "build": "yarn check:type && yarn vite build && yarn copy:client",
    "check:type": "tsc --noEmit",
    "test": "vitest --typecheck",
    "serve": "node dist/index.js"
  },
  "dependencies": {
    "@mongodb-js/zstd": "2.0.0",
    "node-forge": "1.3.1",
    "picocolors": "1.1.1",
    "uuid": "11.0.3",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.3",
    "@types/node-forge": "^1.3.11",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "lopr-shared": "workspace:*",
    "prettier": "^3.4.2",
    "type-fest": "^4.31.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  }
}
